estimate_gev_mixture_model_pessimistic_weights <- function(gev_models){
# gev_models: an object associated with a result of the function "estimate_several_gev_models()"
# get the normalized gev parameters
normalized_gev_parameters <- gev_models$normalized_gev_parameters_object
# calculate the empirical copula of the normalized gev parameters
normalized_gev_parameters_pobs <- copula::pobs(normalized_gev_parameters)
normalized_gev_parameters_empirical_copula <- copula::C.n(u = normalized_gev_parameters_pobs,
X = normalized_gev_parameters_pobs)
# calculate the identic weights
pessimistic_weights <- normalized_gev_parameters_empirical_copula/sum(normalized_gev_parameters_empirical_copula)
names(pessimistic_weights) <- rownames(normalized_gev_parameters)
pessimistic_weights
}
